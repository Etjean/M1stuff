import java.util.Random;

public class Excepts {
	public static void main(String[] args) throws Oups {
		System.out.println(divise(4, 5));
		int[] tab = tab_aleatoire(3);
		
		try {System.out.println(divisions_successives(5000, tab));}
		catch (Exception e) {throw new Oups(e.getMessage());}
		
		System.out.println("Mais l√† ca va !");
	}
	
	//Methodes
	public static int divise(int a, int b) {
		return a/b;
	}
	
	public static int[] tab_aleatoire(int n) {
		int[] tab = new int[n];
		Random rd = new Random();
		for (int i=0; i<n; i++){
			tab[i]=rd.nextInt(10);
		}
		return tab;
	}
	
	public static int divisions_successives(int n, int[] tab) throws Oups {
		for (int i=0; i<tab.length; i++) {
			n = divise(n, tab[i]);
		}
		try {return tab[n];}
		catch(Exception e) {throw new Oups("tableau trop petit" + n);}
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
