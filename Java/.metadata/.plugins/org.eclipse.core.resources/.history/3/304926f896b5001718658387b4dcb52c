	static Personne[] creeNPersonnes(int n) {
		Personne[] tabPers = new Personne[n]; //reserve une zone pour potentiellement n Personnes. Initialement ces Personnes n'existent pas, elles sont null
		for (int i=1; i<n; i++) {
			tabPers[i]= new Personne();
		}
		return tabPers;
	}
	
	
